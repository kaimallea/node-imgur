{
  "author": "Kai Mallea <kmallea@gmail.com>",
  "name": "imgur",
  "description": "Upload images to imgur.com",
  "version": "1.0.0",
  "homepage": "https://github.com/kaimallea/node-imgur",
  "license": "MIT",
  "keywords": [
    "imgur",
    "upload",
    "images"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kaimallea/node-imgur.git"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "form-data": "^4.0.0"
  },
  "main": "./imgur.node.js",
  "browser": "./imgur.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "test:ci": "npx jest --ci --coverage --runInBand",
    "build": "npx tsc",
    "compile": "webpack --mode development",
    "compile:prod": "webpack --mode production && npm run expose",
    "typecheck": "npx tsc --noEmit",
    "eslint": "npx eslint . ",
    "pretty": "npx prettier . --check ",
    "pretty:write": "npx prettier .  --write ",
    "clean": "rm -rf lib",
    "prepare": "npx husky install",
    "expose": "mv -v dist/* ./",
    "lint": "npm run eslint && npm run pretty && npm run typecheck",
    "commit": "npx cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.22",
    "@types/mock-fs": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "axios-mock-adapter": "^1.19.0",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mock-fs": "^4.13.0",
    "msw": "^0.28.1",
    "node-polyfill-webpack-plugin": "^1.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,css,md,yml,yaml,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
