{
  "author": "Ken Eucker <keneucker@gmail.com>",
  "name": "imanagur",
  "description": "Helps you manage your imgur album images",
  "version": "1.0.0",
  "homepage": "https://github.com/keneucker/imanagur-core",
  "license": "MIT",
  "keywords": [
    "imgur",
    "edit",
    "images"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/keneucker/imanagur-core.git"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "form-data": "^4.0.0"
  },
  "main": "imgur.node.js",
  "browser": "imgur.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --verbose",
    "test:dev": "jest --silent=false",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "build": "tsc",
    "build:prod": "echo 'webpack handles the compilation process âœ…'",
    "compile": "webpack --mode development",
    "compile:prod": "npm run remove-gun-log && webpack --mode production && npm run expose",
    "analyse": "webpack --mode production --json | npx webpack-bundle-size-analyzer",
    "expose": "cp -v dist/* ./",
    "watch": "webpack --mode=development --watch --progress",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib dist _site biketag.js* biketag.node* test/src/**/*.js test/src/**/*.d.ts",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier . --check ",
    "lint": "npm run format:check && npm run lint:check && npm run typecheck && echo 'ðŸ¤– !linter âœ… success! ðŸ¤–'",
    "lint:check": "eslint .",
    "lint:write": "prettier . --write && eslint . --fix",
    "lint:staged": "npx --no-install lint-staged",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.22",
    "@types/mock-fs": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "axios-mock-adapter": "^1.19.0",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mock-fs": "^4.13.0",
    "msw": "^0.28.1",
    "node-polyfill-webpack-plugin": "^1.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,css,md,yml,yaml,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
